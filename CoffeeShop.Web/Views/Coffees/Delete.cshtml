<div>
    <h4>Café</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Altitude)
        </dt>
